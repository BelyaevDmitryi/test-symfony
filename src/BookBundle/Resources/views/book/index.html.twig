{% extends '::base.html.twig' %}

{% block menu %}
    {% include ':default:menu.html.twig' %}
{% endblock %}

{% block stylesheets %}
    {% include ':default:style.html.twig' %}
{% endblock %}

{% block body %}
    <h1>Библиотека книг</h1>

    {% if books|length > 0 %}
        <table>
            <thead>
            <tr>
                <th>Название</th>
                <th>Автор</th>
                <th>Обложка</th>
                <th>Книга</th>
                <th>Дата прочтения</th>
                <th>Разрешить скачивание</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.name }}</td>
                    <td>{{ book.author }}</td>
                    {% if book.isDownload == 1 %}
                        {% set typeTitleFile = [book.title]|join|split('/titles/') %}
                        {% set typeBookFile = [book.book]|join|split('/books/') %}
                        <td>
                            {#showImage(path,width,heigth)#}

                            {{ showImage(path('book_image', { 'id': typeTitleFile[1] }), 500, 200, "Обложка книги",book.isDownload) }}
                            <div>
                                <a href="{{ asset(path('book_image', {'id': typeTitleFile[1]}) ) }}">Просмотр</a>
                                <a href="{{ asset(path('download_titles', {'id': book.id }) ) }}">Скачать</a>
                            </div>
                        </td>
                        <td>
                            <div>
                                <a href="{{ asset(path('book_document', {'id': typeBookFile[1] }) ) }}">Просмотр</a>
                            </div>
                            <div>
                                <a href="{{ asset(path('download_books', {'id': book.id }) ) }}">Скачать</a>
                            </div>
                        </td>
                        <td>{% if book.dateRead %}{{ book.dateRead|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if book.isDownload %}Yes{% else %}No{% endif %}</td>
                        <td>
                            <ul>
                                {% if app.user != "" %}
                                <div>
                                    <a href="{{ path('book_edit', { 'id': book.id }) }}">Редактировать</a>
                                </div>
                                {% endif %}
                            </ul>
                        </td>
                    {% else %}
                        <td>
                            {{ showImage(path('book_image', { 'id': book.id }), 500, 200, "Обложка книги",book.isDownload) }}
                        </td>
                        <td>
                            <div class="pdf-books">
                                Скачивание не разрешено!
                            </div>
                        </td>
                        <td>{% if book.dateRead %}{{ book.dateRead|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if book.isDownload %}Yes{% else %}No{% endif %}</td>
                        <td>
                            <ul>
                                {% if app.user != "" %}
                                    <div>
                                        <a href="{{ path('book_edit', { 'id': book.id }) }}">Редактировать</a>
                                    </div>
                                {% endif %}
                            </ul>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        У вас пока нет книг в библиотеке :((
    {% endif %}
    {% if app.user != "" %}
        <ul>
            <div>
                <a href="{{ path('book_new') }}">Добавить</a>
            </div>
        </ul>
    {% endif %}
{% endblock %}
